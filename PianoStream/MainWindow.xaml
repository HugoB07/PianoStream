<Window x:Class="PianoStream.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PianoStream"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="950">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Controls -->
            <RowDefinition Height="*"/>
            <!-- Log -->
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,10" Grid.Row="0" >
            <Button Name="StartButton" Content="Start Piano" Width="130" Height="35" Margin="0,0,20,0" Click="StartButton_Click"/>

            <Label Content="SoundFont :" VerticalAlignment="Center" />
            <ComboBox x:Name="SoundFontComboBox" Width="250" Margin="5,0,20,0" VerticalAlignment="Center" />

            <Label Content="Volume :" VerticalAlignment="Center" />
            <Slider x:Name="VolumeSlider" Minimum="0.1" Maximum="1" Value="1"
            Width="150" TickFrequency="0.1" IsSnapToTickEnabled="True"
            ValueChanged="VolumeSlider_ValueChanged" Margin="5,0,5,0"
            VerticalAlignment="Center"/>
            <TextBlock x:Name="VolumeValueText" Text="100%" VerticalAlignment="Center" Width="40" TextAlignment="Center"/>
            <CheckBox x:Name="NoiseCancellationCheckBox"
                  Content="Noise Cancellation"
                  Margin="20,0,0,0"
                  VerticalAlignment="Center"
                  Checked="NoiseCancellationCheckBox_Checked"
                  Unchecked="NoiseCancellationCheckBox_Unchecked"/>
        </StackPanel>

        <TextBox Name="LogBox" Grid.Row="1" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" AcceptsReturn="True"
                 FontFamily="Consolas" FontSize="12" />
    </Grid>
</Window>
